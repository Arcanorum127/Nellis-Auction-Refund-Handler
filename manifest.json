{
    "manifest_version": 3,
    "name": "Nellis Auction Refund Handler",
    "version": "1.1",
    "description": "Automate review and manager approval of Nellis Auction refunds.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
    "16": "icons/NA-ReturnsHandler-icon16x16.png",
    "32": "icons/NA-ReturnsHandler-icon32x32.png",
    "48": "icons/NA-ReturnsHandler-icon48x48.png",
    "128": "icons/NA-ReturnsHandler-icon128x128.png"
  },
    "action": {
      "default_title": "Initiate return handler"
    }
  }